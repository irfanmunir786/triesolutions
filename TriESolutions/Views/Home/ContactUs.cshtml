@model SendEmail
@{
    ViewData["Title"] = "ContactUs";
}
<br />
<body class="body-content">
    <section class="page" style="background-image: url(/images/ServicesHeader.jpg);">
        <div class="auto-container">
            <h1 style="color:black">Contact US Today</h1>
            <div class="text-center">
                <a style="color:black">Home</a>
                
                <span style="color:black">/</span>
                <a style="color: #f0aa0c">Contact US</a>
            </div>
        </div>
    </section>
    <div class="container-fluid mt-3">
        <div class="col-12 bg-light">
            <div class="row">
                <div class="col-lg-6 col-md-12  col-sm-12 col-12">
                    <form class="form-horizontal" method="post" id="formvalidation">
                        <fieldset>
                            <legend class="text-center header" style="color: #05007f">SEND US MESSAGE</legend>
                            <h1>@ViewBag.Meaasage</h1>
                            <div class="form-group">
                                <div class="col-lg-3 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-3 col-sm-offset-1 col-3 col-offset-1 text-center">
                                    <i class="fas fa-user fa-2x headingtextcolors">
                                        <span class="text-danger" style="font-size:16px">*</span>
                                    </i>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    <input asp-for="@Model.Name" type="text" id="name" class="form-control" placeholder="Enter your Name" data-val-required="Please enter the name" required />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-3 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-3 col-sm-offset-1 col-3 col-offset-1 text-center">
                                    <i class="far fa-envelope fa-2x headingtextcolors">
                                        <span class="text-danger" style="font-size:16px">*</span>
                                    </i>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    <input asp-for="@Model.Email" id="email" type="email" class="form-control" placeholder="enter your Email Address" data-val-required="Please enter the Email Address" required />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-3 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-3 col-sm-offset-1 col-3 col-offset-1 text-center">
                                    <i class="fa fa-phone-square fa-2x  headingtextcolors">
                                        <span class="text-light" style="font-size:16px">*</span>
                                    </i>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    <input asp-for="@Model.MobilePhone" id="phone" type="number" class="form-control" placeholder="enter your Contact Number" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-3 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-3 col-sm-offset-1 col-3 col-offset-1 text-center">
                                    <i class="fas fa-comment-dots fa-2x  headingtextcolors">
                                        <span class="text-danger" style="font-size:16px">*</span>
                                    </i>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                    <textarea  asp-for="@Model.Message"  id="message" type="text" class="form-control" placeholder="Enter Your Message"
                                           data-val-length="Length must be between 5 to 250"
                                           data-val-length-max="250" data-val-length-min="5" data-val-required="Please enter the your Message" 
                                           style="text-align:start end" rows="5" required></textarea>
                                    <span class="text-danger" asp-validation-for="Message"></span>
                                </div>
                            </div>
                            <div class="form-group mt-5">
                                <div class="text-center">
                                    <button type="submit" id="conatctUsbtn" class="btn w-25 h-25 btn-lg text-center" style="background-color: #f0aa0c;color: white;font-weight:bold">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="col-lg-6 col-md-12  col-sm-12 col-12">
                    <form class="form-horizontal" method="post">
                        <fieldset>
                            <legend class="text-center header" style="color: #05007f">Contact us</legend>
                            <div class="form-group">
                                <span class="col-lg-1 col-lg-offset-2 col-md-1 col-md-offset-2 col-sm-1 col-sm-offset-2 col-1 col-offset-2 text-center headingtextcolors">
                                    <i class="fas fa-address-card fa-2x pt-3"></i>
                                </span>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                    <h5>MZ-4 AL Qadir Heights Garden Town,Lahore, Pakistan</h5>
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="col-lg-1 col-lg-offset-2 col-md-1 col-md-offset-2 col-sm-1 col-sm-offset-2 col-1 col-offset-2 text-center headingtextcolors">
                                    <i class="far fa-envelope fa-2x"></i>
                                </span>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                    <h5>hr.triesolutions@gmail.com</h5>
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="col-lg-1 col-lg-offset-2 col-md-1 col-md-offset-2 col-sm-1 col-sm-offset-2 col-1 col-offset-2 text-center headingtextcolors">
                                    <i class="fa fa-phone-square fa-2x"></i>
                                </span>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                    <h5>+923012377712</h5>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-5">
        <div class="col-12">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3401.8002395985022!2d74.32438991515012!3d31.502174181375622!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3919046eff8ceb97%3A0x937fbbcf4fde7385!2sAl-Qadir%20Heights%2C%20Babar%20Block%20Garden%20Town%2C%20Lahore%2C%20Punjab!5e0!3m2!1sen!2s!4v1618244561153!5m2!1sen!2s"
                    style="width:100%;height:400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
        </div>
    </div>

</body>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

<script>

    //const sendContactUs = () => {
    $("#formvalidation").validate({
        rules: {
            "name": {
                required: true
            },
            "email": {
                required: true
            },
            "message": {
                required: true
            },
        },
        message: {
            "name": {
                required: "Enter Name"
            },
            "email": {
                required: "Enter Email"
            },
            "message": {
                required: "Enter Message"
            },
        },
        submitHandler: function (form) {
            debugger
            const name = $("#name").val();
            const email = $("#email").val();
            const phone = $("#phone").val();
            const message = $("#message").val();

            const obj = {
                Name: name,
                Email: email,
                MobilePhone: phone,
                Message: message
            };
            $.ajax({
                url: "/Home/AddContactUsData",
                type: "POST",
                dataType: "json",
                data: obj,
                success: (result) => {
                    debugger
                    window.location.reload();
                }
            });
        }
    });
</script>